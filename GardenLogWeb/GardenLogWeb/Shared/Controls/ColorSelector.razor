 <input type="color" class="form-control form-control-color" value="@Color" @onchange="OnColorChanged" id="@Id" title="@Title" >
@code {
    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Color { get; set; }

     [Parameter]
    public EventCallback<string> ColorChanged { get; set; }

    private Task OnColorChanged(ChangeEventArgs e)
    {
        Color = e.Value.ToString();
        return ColorChanged.InvokeAsync(Color);
    }
}
